{
  "name": "alexandre-website",
  "version": "1.0.0",
  "description": "Alexandre Djerbetian - personal website",
  "scripts": {
    "mono:echo": "lerna exec --concurrency 1 -- 'pwd'",
    "mono:install": "npm install && lerna exec -- 'pwd && rm -f package-lock.json && rm -rf node_modules && npm install --silent && echo done'",
    "mono:ci": "npm ci && lerna exec -- npm ci",
    "mono:update": "npm update && lerna exec -- npm update",
    "mono:build": "lerna run build",
    "test": "lerna run test",
    "dev": "docker-compose --file docker-compose.dev.yml up --build",
    "e2e": "docker-compose --file docker-compose.e2e.yml up --build --exit-code-from e2e",
    "prod": "docker-compose up --build"
  },
  "dependencies": {
    "lerna": "^3.20.2"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^2.29.0",
    "@typescript-eslint/parser": "^2.29.0",
    "@vue/eslint-config-typescript": "^5.0.2",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-chai-friendly": "^0.6.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-vue": "^6.2.2",
    "prettier": "^2.0.5",
    "typescript": "^3.8.3"
  }
}
