{
  "name": "alexandre-website",
  "version": "1.0.0",
  "description": "Alexandre Djerbetian - personal website",
  "scripts": {
    "bootstrap": "npm ci && npm run mono:ci && npm run compile",
    "mono:i": "lerna exec -- 'rm -f package-lock.json && rm -rf node_modules && npm i --silent'",
    "mono:ci": "lerna exec -- 'npm ci --silent'",
    "mono:update": "lerna exec -- npm update",
    "build": "lerna run build",
    "compile": "lerna run compile",
    "clean": "lerna clean --yes && lerna exec -- 'rm -rf dist/'",
    "test": "lerna run test",
    "dev": "docker-compose -f docker-compose.dev.yml up --build",
    "prod": "docker-compose -f docker-compose.prod.yml up --build",
    "e2e": "./e2e.sh build && ./e2e.sh run && ./e2e.sh stop"
  },
  "dependencies": {
    "lerna": "^3.20.2"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^2.29.0",
    "@typescript-eslint/parser": "^2.29.0",
    "@vue/eslint-config-typescript": "^5.0.2",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-chai-friendly": "^0.6.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-vue": "^6.2.2",
    "prettier": "^2.0.5",
    "typescript": "^3.8.3"
  }
}
